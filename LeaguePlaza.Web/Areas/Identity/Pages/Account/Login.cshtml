@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="identity-form-holder">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="error-message" role="alert"></div>
            <div>
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="error-message"></span>
            </div>
            <div>
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="error-message"></span>
            </div>
            <div>
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit">Log in</button>
            </div>
        </form>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/identity/identity.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
