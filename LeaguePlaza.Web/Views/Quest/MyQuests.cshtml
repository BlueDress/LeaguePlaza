@using LeaguePlaza.Core.Features.Quest.Models.ViewModels

@model UserQuestsViewModel

<h1>My Quests</h1>

<div>
    <form id="create-quest">
        <label for="title">Title</label>
        <input id="title" type="text" name="title" placeholder="Title" />

        <label for="description">Description</label>
        <input id="description" type="text" name="description" placeholder="Description" />

        <label for="reward">Reward</label>
        <input id="reward" type="number" step="0.01" name="reward" placeholder="0.00" />

        <label for="type">Type</label>
        <select id="type" name="type">
            <option value="" disabled selected>Select quest type</option>
            <option value="1">Monster Hunt</option>
            <option value="2">Gathering</option>
            <option value="3">Escort</option>
        </select>
        <button type="submit">Post</button>
    </form>
</div>

<div>
    @foreach (var quest in Model.UserQuests)
    {
        <ul>
            <li>@quest.Id</li>
            <li>@quest.Title</li>
            <li>@quest.Description</li>
            <li>@quest.Created</li>
            <li>@quest.RewardAmount</li>
            <li>@quest.Type</li>
            <li>@quest.Status</li>
            <li>@quest.CreatorId</li>
            <li><a asp-controller="Quest" asp-action="ViewQuest">View Quest</a></li>
        </ul>
    }
</div>

@section Scripts
{
    <script src="~/js/quest/my-quests.js" ></script>
}