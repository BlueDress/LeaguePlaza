@using LeaguePlaza.Common.Constants
@using LeaguePlaza.Core.Features.Quest.Models.ViewModels

@model UserQuestsViewModel

@section Styles
{
    <link rel="stylesheet" href="~/css/quest/my-quests.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global/quest-cards-container.css" asp-append-version="true" />
}

<div class="container">
    @if (User.IsInRole(UserRoleConstants.QuestGiver))
    {

        <h2>Post a quest</h2>
        <form id="create-quest" class="create-quest-form" novalidate>
            <div>
                <label for="title">Title</label>
                <input id="title" class="create-quest-input-js" type="text" name="title" placeholder="Title" maxlength="50" required />
                <span class="display-none"></span>
            </div>
            <div>
                <label for="description">Description</label>
                <textarea id="description" rows="4" name="description" placeholder="Description" maxlength="500"></textarea>
            </div>
            <div>
                <label for="reward">Reward</label>
                <input id="reward" class="create-quest-input-js" type="number" step="0.01" name="reward" placeholder="0.00" required />
                <span class="display-none"></span>
            </div>
            <div>
                <label for="type">Type</label>
                <select id="type" name="type" required>
                    <option value="" disabled selected>Select quest type</option>
                    <option value="1">Monster Hunt</option>
                    <option value="2">Gathering</option>
                    <option value="3">Escort</option>
                </select>
                <span class="display-none"></span>
            </div>
            <div class="create-quest-form-buttons">
                <button id="create-quest-btn" type="submit">Post</button>
                <button id="update-quest-btn" type="button" disabled>Update</button>
            </div>
        </form>
    }

    <h1>My Quests</h1>

    <div id="quests-holder">
        <div class="controlls-holder">
            <div class="filters-holder">
                <details>
                    <summary>
                        Filters
                    </summary>
                    <div class="filters-choice-holder">
                        <div>
                            <p>
                                Status
                            </p>
                            <ul>
                                <li>
                                    <input id="posted" name="posted" type="checkbox" />
                                    <label for="posted">Posted</label>
                                </li>
                                <li>
                                    <input id="accepted" name="accepted" type="checkbox" />
                                    <label for="accepted">Accepted</label>
                                </li>
                                <li>
                                    <input id="completed" name="completed" type="checkbox" />
                                    <label for="completed">Completed</label>
                                </li>
                            </ul>
                        </div>
                        <div>
                            <p>
                                Type
                            </p>
                            <ul>
                                <li>
                                    <input id="monster-hunt" name="monster-hunt" type="checkbox" />
                                    <label for="monster-hunt">Monster Hunt</label>
                                </li>
                                <li>
                                    <input id="escort" name="escort" type="checkbox" />
                                    <label for="escort">Escort</label>
                                </li>
                                <li>
                                    <input id="gathering" name="gathering" type="checkbox" />
                                    <label for="gathering">Gathering</label>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="filters-button-holder">
                        <button type="button">Apply filters</button>
                    </div>
                </details>
            </div>
            <div class="sort-search-holder">
                <div>
                    <select>
                        <option value="" disabled selected>Sort by</option>
                        <option value="1">Date New</option>
                        <option value="2">Date Old</option>
                        <option value="3">Reward Most</option>
                        <option value="4">Reward Least</option>
                    </select>
                </div>
                <div>
                    <form class="search-quest-form" novalidate>
                        <label for="search">Search</label>
                        <input id="search" type="text" name="search" placeholder="Search" />
                        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </div>
            </div>
        </div>
        <partial name="~/Views/Shared/Quest/_QuestCardsContainer.cshtml" model="@Model.UserQuests" />
        <div class="pagination-holder">
            <ul>
                <li><button><<</button></li>
                <li><button><</button></li>
                <li><button>1</button></li>
                <li><button>2</button></li>
                <li><button>3</button></li>
                <li><button>...</button></li>
                <li><button>99</button></li>
                <li><button>></button></li>
                <li><button>>></button></li>
            </ul>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/quest/my-quests.js"></script>
}