@using LeaguePlaza.Common.Constants
@using LeaguePlaza.Core.Features.Quest.Models.ViewModels

@model UserQuestsViewModel

<h1>My Quests</h1>

@if (Model.UserRoles.Contains(UserRoleConstants.QuestGiver))
{
    <div>
        <form id="create-quest" novalidate>
            <label for="title">Title</label>
            <input id="title" type="text" name="title" placeholder="Title" maxlength="50" required />
            <span class="display-none"></span>

            <label for="description">Description</label>
            <input id="description" type="text" name="description" placeholder="Description" maxlength="500" />

            <label for="reward">Reward</label>
            <input id="reward" type="number" step="0.01" name="reward" placeholder="0.00" required />
            <span class="display-none"></span>

            <label for="type">Type</label>
            <select id="type" name="type" required>
                <option value="" disabled selected>Select quest type</option>
                <option value="1">Monster Hunt</option>
                <option value="2">Gathering</option>
                <option value="3">Escort</option>
            </select>
            <span class="display-none"></span>

            <button type="submit">Post</button>
            <button id="update-quest-btn" type="button" disabled>Update</button>
        </form>
    </div>
}

<div id="quests-holder">
    @foreach (var quest in Model.UserQuests)
    {
        <div class="quest-info-js">
            <ul>
                <li>@quest.Id</li>
                <li>@quest.Title</li>
                <li>@quest.Description</li>
                <li>@quest.Created</li>
                <li>@quest.RewardAmount</li>
                <li>@(quest.Type == "MonsterHunt" ? "Monster Hunt" : quest.Type)</li>
                <li>@quest.Status</li>
                <li>@quest.CreatorId</li>
                <li>@quest.AdventurerId</li>
                <li><a asp-controller="Quest" asp-action="ViewQuest" asp-route-id="@quest.Id">View Quest</a></li>
            </ul>
            @if (Model.UserRoles.Contains(UserRoleConstants.QuestGiver))
            {
                <button class="edit-btn-js" type="button">Edit</button>

                @if (quest.AdventurerId != null)
                {
                    <button class="complete-btn-js" type="button">Mark as complete</button>
                }
            }
            @if (Model.UserRoles.Contains(UserRoleConstants.Adventurer))
            {
                <button class="abandon-btn-js" type="button">Abandon</button>
            }
        </div>
    }
</div>

@section Scripts
{
    <script src="~/js/quest/my-quests.js"></script>
}